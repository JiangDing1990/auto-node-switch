{
	"name": "auto-node-switch",
	"version": "0.1.2",
	"description": "🚀 Node.js 智能版本管理工具 - 为不同项目自动切换对应的 Node.js 版本",
	"license": "MIT",
	"author": {
		"name": "jiangding1990",
		"email": "jiangdingjd@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jiangding1990/auto-node-switch.git"
	},
	"homepage": "https://github.com/jiangding1990/auto-node-switch#readme",
	"bugs": {
		"url": "https://github.com/jiangding1990/auto-node-switch/issues"
	},
	"bin": {
		"auto-node-switch": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"os": [
		"darwin",
		"linux",
		"win32"
	],
	"keywords": [
		"nodejs",
		"node",
		"version-management",
		"version-switcher",
		"nvm",
		"fnm",
		"cli",
		"automation",
		"development-tools",
		"developer-experience",
		"workflow",
		"productivity",
		"cross-platform"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "npm run test:all",
		"test:unit": "node --test tests/unit-tests.mjs",
		"test:comprehensive": "./tests/comprehensive-test.sh",
		"test:all": "./tests/run-tests.sh all",
		"test:performance": "./tests/run-tests.sh performance",
		"test:parallel": "./tests/run-tests.sh all --parallel",
		"lint": "prettier --check . && eslint source/**/*.ts source/**/*.tsx",
		"lint:fix": "prettier --write . && eslint --fix source/**/*.ts source/**/*.tsx",
		"prepare": "npm run build",
		"prepublishOnly": "npm run build && npm run test:unit",
		"start": "node dist/cli.js",
		"prepack": "npm run build"
	},
	"files": [
		"dist",
		"README.md"
	],
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"npmConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"dependencies": {
		"figures": "^5.0.0",
		"ink": "^4.1.0",
		"ink-select-input": "^5.0.0",
		"ink-spinner": "^5.0.0",
		"ink-text-input": "^5.0.1",
		"meow": "^11.0.0",
		"react": "^18.2.0",
		"semver": "^7.7.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/node": "^20.14.0",
		"@types/react": "^18.0.32",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-unicorn": "^61.0.2",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"undici-types": "^6.20.0"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"prettier": "@vdemedes/prettier-config"
}
